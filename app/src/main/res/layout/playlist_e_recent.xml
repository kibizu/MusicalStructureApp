<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        tools:showIn="@layout/activity_main"
        >

        <LinearLayout
            android:id="@+id/playlist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_album_white_24dp"
                android:layout_weight="3"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"

                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size"
                    android:text="@string/playlist"

                    />

                <TextView
                    android:id="@+id/n_playlist"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/playlist_number"
                    android:textSize="@dimen/under_text_size"
                    android:textColor="@color/under_text_color"
                    android:gravity="top"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/recent_tracks"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:foreground="?android:attr/selectableItemBackground"
            >

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_query_builder_white_24dp"
                android:layout_weight="3"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="bottom"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/text_size"
                    android:text="@string/recent"

                    />

                <TextView
                    android:id="@+id/n_recent_tracks"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="@string/recenttracks_number"
                    android:textColor="@color/under_text_color"
                    android:textSize="@dimen/under_text_size"
                    android:gravity="top"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>